<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tela_jogo"
    android:background="@drawable/bg_lateral"
    android:padding="8dp"
    tools:context="com.example.gabriel.applicationparkateje.controller.JogoActivity">

    <ImageView
        android:id="@+id/imgJogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        app:srcCompat="@android:color/holo_green_light" />

    <RelativeLayout
        android:id="@+id/perguntalt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgJogo"
        android:background="@drawable/pergunta_background"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/pergunta"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_centerHorizontal="true"
            android:text="TextView"
            android:textStyle="bold" />

    </RelativeLayout>

    <Button
        android:id="@+id/opcao1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pergunta_background"
        android:layout_below="@+id/perguntalt"
        android:clickable="true"
        android:text="teste"
        android:textStyle="bold"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/opcao2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/opcao1"
        android:layout_marginRight="50dp"
        android:clickable="true"
        android:background="@drawable/pergunta_background"
        android:text="teste"
        android:textStyle="bold"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/opcao3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/opcao2"
        android:background="@drawable/pergunta_background"
        android:clickable="true"
        android:text="teste"
        android:textStyle="bold"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/opcao4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/opcao3"
        android:background="@drawable/pergunta_background"
        android:clickable="true"
        android:text="teste"
        android:textStyle="bold"
        android:layout_margin="8dp"/>

</RelativeLayout>
