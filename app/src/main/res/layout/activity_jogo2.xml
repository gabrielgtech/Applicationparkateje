<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    android:padding="8dp"
    tools:context="com.example.gabriel.applicationparkateje.controller.jogo2Activity">


    <TextView
        android:id="@+id/txtPergunta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_above="@+id/imgresposta2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="87dp" />

    <ImageView
        android:id="@+id/imgresposta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        app:srcCompat="@drawable/cachorro"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/txtPergunta2"
        android:layout_toStartOf="@+id/txtPergunta2" />

    <ImageView
        android:id="@+id/imgresposta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cobra"
        android:layout_alignTop="@+id/imgresposta"
        android:layout_toRightOf="@+id/txtPergunta2"
        android:layout_toEndOf="@+id/txtPergunta2" />

    <ImageView
        android:id="@+id/imgresposta3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:srcCompat="@drawable/flecha"
        android:layout_below="@+id/imgresposta2"
        android:layout_alignRight="@+id/imgresposta2"
        android:layout_alignEnd="@+id/imgresposta" />

    <ImageView
        android:id="@+id/imgresposta4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/canoa"
        android:layout_alignTop="@+id/imgresposta3"
        android:layout_alignLeft="@+id/imgresposta2"
        android:layout_alignStart="@+id/imgresposta2" />

</RelativeLayout>
